{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./packages",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "paths": {
      "@gsmlg/utils": ["./utils/src"],
      "@gsmlg/utils/*": ["./utils/src/*"],
      "@gsmlg/com": ["./com/src"],
      "@gsmlg/com/*": ["./com/src/*"]
    }
  },
  "exclude": ["**/build/"]
}
